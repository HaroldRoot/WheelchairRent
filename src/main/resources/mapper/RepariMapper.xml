<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wheelchair.wym.dao.RepairMapper">
    <!-- 插入维修申请 -->
    <insert id="insertRepair" parameterType="com.example.entity.Repair">
        INSERT INTO repair (description, status, applicant_id, approval_id, created_at, updated_at)
        VALUES (#{description}, #{status}, #{applicantId}, #{approvalId}, NOW(), NOW())
    </insert>

    <!-- 根据ID查询维修申请 -->
    <select id="getRepairById" parameterType="long" resultType="com.example.entity.Repair">
        SELECT * FROM repair WHERE id = #{id}
    </select>

    <!-- 查询所有维修申请 -->
    <select id="getAllRepairs" resultType="com.example.entity.Repair">
        SELECT * FROM repair
    </select>

    <!-- 更新维修申请 -->
    <update id="updateRepair" parameterType="com.example.entity.Repair">
        UPDATE repair
        SET description = #{description},
            status = #{status},
            applicant_id = #{applicantId},
            approval_id = #{approvalId},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 删除维修申请 -->
    <delete id="deleteRepair" parameterType="long">
        DELETE FROM repair WHERE id = #{id}
    </delete>
</mapper>